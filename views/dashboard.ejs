    <!-- Tabs -->
    <section class="dashboard-options container">
        <!-- Events -->
        <div class="dashboard-option" onclick="window.location.href='/events'">
            <i class="fa fa-calendar"></i>
            <h2 class="optionName">Events</h2>
            <p class="optionAbout">Manage upcoming events.</p>
        </div>

        <!-- Notice -->
        <div class="dashboard-option" onclick="window.location.href='/notices'">
            <i class="fa fa-newspaper-o"></i>
            <h2 class="optionName">Notices</h2>
            <p class="optionAbout">Manage important notices.</p>
        </div>

        <!-- Announcements -->
        <div class="dashboard-option" onclick="toggleAnnouncementForm()">
            <i class="fa fa-bullhorn"></i>
            <h2 class="optionName">Announcements</h2>
            <p class="optionAbout">Make announcements to members.</p>
        </div>
    </section><br>

    <!-- Edit Announcement -->
    <section class="announcement-form container" style="display: none;">
        <form id="announcementForm" class="custom-form">
            <input type="text" id="announcementText" class="custom-input" placeholder="Enter the Announcement">
            <button type="button" class="submit-button" onclick="submitAnnouncement()">Submit</button>
        </form>
    </section>

    <!-- Javascript -->
    <script src="js/code.js"></script>

    <script>
        function submitAnnouncement() {
            const announcementText = document.getElementById('announcementText').value;

            if (announcementText.trim() !== '') {
                const newAnnouncement = {
                    text: announcementText,
                    timestamp: Date.now(),
                };
                localStorage.setItem('announcement', JSON.stringify(newAnnouncement));
                document.getElementById('announcementForm').reset();
                toggleAnnouncementForm();
                updateMarquee(newAnnouncement.text);
            }
        }
        function toggleAnnouncementForm() {
            const announcementForm = document.querySelector('.announcement-form');
            if (announcementForm.style.display === 'none' || announcementForm.style.display === '') {
                announcementForm.style.display = 'block';
            } else {
                announcementForm.style.display = 'none';
            }
        }
    </script>

